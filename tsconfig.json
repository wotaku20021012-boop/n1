{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node",
      "nuxt",
      "vite/client"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "moduleResolution": "node",
  },
  "include": [
    "nuxt.config.ts",
    "app.vue",
    "app/**/*.vue",
    "pages/**/*.vue",
    "components/*.vue",
    ".nuxt/**/*.d.ts",
    "env.d.ts",
    "**/*.vue"
  ]
}